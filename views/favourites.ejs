<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <title>Favourite Sneakers</title>

    <!-- External CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <!--JQuery--->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!--Event Handlers-->
    <script src="scripts/favourites.js"></script>
    <script src="scripts/event-handlers/load_event_handler.js"></script>

    <!-- <header>
      <%- include('partials/_header') %>
    </header> -->
  </head>

  <body>
    <main class="main">
      <section class="shoes-by-seller">
        <h4>Existing Products</h4>
        <% for(let sneaker of favouriteSneakers) { %>
        <div class="card" style="width: 18rem;">
          <div class="card-body" data-item="<%= sneaker.id %>">
            <h5 class="card-title favouriteData"><%= sneaker.title %></h5>
            <p class="card-text favouriteData"><%= sneaker.brand %></p>
            <p class="card-text favouriteData"><%= sneaker.price %></p>
            <p class="card-text favouriteData">
              <img src="<%=sneaker.cover_photo_url %>" />
            </p>
          </div>
        </div>
        <% } %>
      </section>
    </main>
  </body>
</html>
