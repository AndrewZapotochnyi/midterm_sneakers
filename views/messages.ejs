<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/scripts/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <h1>Messages</h1>

    <h3>Messages</h3>

    <p>
      <% for(let message of data) { %>

      <p>From: <%= message.name %></p>
      <p>Product: <%= message.title %></p>
      <p><%= message.message %></p>
      <p>----------------------------</p>

      <% } %>
    </p>

    <div class="right-buttons">
      <form id="login-form" action="/messages" method="POST">
        <input type="text" id="username" name="new_message" placeholder="message" />
        <span>
          <button type="submit" class="login-btn">Send message</button>
        </span>
      </form>
    </div>


  </body>
</html>
