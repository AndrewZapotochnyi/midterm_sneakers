<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
    <title>Sneakers - Admin Page</title>
    <!-- External CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css"/>
  </head>
  <header>
    <%- include('partials/_header') %>
  </header>
  <body>
  <!-- Add a new Product -->
  <section class="wrap card-body">
      <section class="body-section">
        <h1>Create a new product</h1>
        <form class="create-product" action="/sneakers/new" method="POST">
          <div class="new-product-header">
            <div class="brand-group">
              <input type="text" class="form-control" id="brand" name="brand" placeholder="Shoe's brand">
            </div>
            <div class="title-group">
              <input type="text" class="form-control" id="title" name="title" placeholder="Title">
            </div>
          </div>

          <div class="new-product-body">
            <div class="size-group">
              <label for="size">Size</label>
              <select class="size-control" id="size" name="size">
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
              </select>
            </div>
            <div class="price-group">
              <input type="text" class="form-control" id="price" name="price" placeholder="Price">
            </div>
          </div>

          <div class="new-product-footer">
            <div class="description-group">
              <input type="text" class="form-control" id="description"  name="description" placeholder="Description">
            </div>
          </div>

          <input type="hidden" class="form-control" id="colour" name="colour" value="red">
          <input type="hidden" class="form-control" id="gender" name="gender" value="male">
          <input type="hidden" class="form-control" id="cover_photo_url" name="cover_photo_url" value="http">

          <section class="button-create">
            <button type="submit" class="btn btn-primary">Create Product</button>
          </section>

        </form>

    <!-- Existing Products -->
    <main class="main">

      <h1>Existing Products</h1>
      <section class="shoes-by-seller">

          <% for(let each of sneakers) { %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= each.title %></h5>
              <p class="card-text"><%= each.brand %></p>
              <p class="card-text"><%= each.price %></p>
            </div>
            <div class="card-footer">
              <form method="POST" action="/sneakers/<%= each.id %>/put">
                <button type="delete" class="btn btn-success">Mark Sold</button>
              </form>
              <form method="POST" action="/sneakers/<%= each.id %>/delete">
                <button type="delete" class="btn btn-danger">Delete</button>
              </form>
            </div>

          </div>
          <% } %>
        </section>
    </main>
      </section>

  </section>
  </body>
</html>




